---
/**
 * Блок соцдоказательства: цифры и результаты из кейсов.
 */
import AnimatedTrustMetrics from '../features/AnimatedTrustMetrics';
import SectionReveal from '../features/SectionReveal';

interface Props {
  metrics?: Array<{ value: string; label: string }>;
}

const { metrics: propsMetrics } = Astro.props;
const metrics = propsMetrics && propsMetrics.length > 0
  ? propsMetrics
  : [
      { value: '24/7', label: 'Автоматизации работают без выходных' },
      { value: 'секунды', label: 'Расписание из голосового сообщения' },
      { value: '1 вечер', label: 'Свой AI-ассистент в Telegram' },
    ];
---

<SectionReveal client:load>
<section class="mx-auto max-w-5xl px-4 py-16 sm:px-6 sm:py-24" aria-labelledby="trust-heading">
  <h2 id="trust-heading" class="text-2xl font-bold text-gray-900 dark:text-white sm:text-3xl text-center">
    Результаты
  </h2>
  <p class="mt-4 text-center text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
    Реальные метрики из проектов: экономия времени, скорость внедрения.
  </p>
  <AnimatedTrustMetrics client:load metrics={metrics} />
</section>
</SectionReveal>

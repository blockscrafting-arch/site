---
/**
 * Базовый layout для всех страниц.
 * Подключает глобальные стили, Header, Footer, глоссарий, OG/Twitter meta.
 */
import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import GlossaryActivator from '../components/features/GlossaryActivator';
import glossaryData from '../content/glossary.json';
import { site } from '../utils/site';

interface Props {
  title: string;
  description?: string;
  /** Путь к OG-картинке (от корня) или полный URL. По умолчанию site.ogImage */
  image?: string;
}

const { title, description = site.description, image } = Astro.props;
const desc = description ?? site.description;
const path = Astro.url.pathname.replace(/\/$/, '') || '/';
const canonical = `${site.url}${path}`;
const ogImageUrl = image?.startsWith('http') ? image : `${site.url}${image ?? site.ogImage}`;

/** Экранирует </script> в JSON для безопасной вставки в тег script (защита от XSS). */
const safeGlossaryJson = JSON.stringify(glossaryData).replace(/<\/script/gi, '\\u003c/script');
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={desc} />
    <link rel="canonical" href={canonical} />
    <meta name="theme-color" content="#ffffff" />
    <script is:inline>
      (function(){
        var k='theme',s=typeof localStorage!=='undefined'?localStorage.getItem(k):null;
        var theme=(s==='dark'||s==='light')?s:(typeof matchMedia!=='undefined'&&matchMedia('(prefers-color-scheme: dark)').matches?'dark':'light');
        document.documentElement.classList.add(theme);
        var m=document.querySelector('meta[name="theme-color"]');
        if(m)m.content=theme==='dark'?'#0f172a':'#ffffff';
      })();
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={site.name} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={desc} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:locale" content="ru_RU" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={desc} />
    <meta name="twitter:image" content={ogImageUrl} />
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-950 text-gray-900 dark:text-gray-100 flex flex-col">
    <a href="#main-content" class="skip-link">
      Перейти к содержимому
    </a>
    <script type="application/json" id="glossary-data" set:html={safeGlossaryJson}></script>
    <GlossaryActivator client:load />
    <Header />
    <main id="main-content" class="flex-1" data-glossary>
      <slot />
    </main>
    <Footer />
  </body>
</html>

---
/**
 * Шапка сайта: логотип, навигация, переключатель темы.
 * На мобильных навигация в <details> без inline-скриптов (CSP-friendly).
 */
import Navigation from './Navigation.astro';
import ThemeToggle from '../features/ThemeToggle';
---

<header class="sticky top-0 z-50 border-b border-gray-200 dark:border-gray-800 bg-white/80 dark:bg-gray-950/80 backdrop-blur-sm">
  <div class="mx-auto flex h-16 max-w-5xl items-center justify-between px-4 sm:px-6">
    <a href="/" class="font-mono text-lg font-semibold tracking-tight text-gray-900 dark:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 dark:focus-visible:ring-offset-gray-950 rounded">
      vlad.execute(<span class="text-emerald-500">_</span>)
    </a>

    <div class="flex items-center gap-2">
      <div class="hidden md:block">
        <Navigation />
      </div>
      <ThemeToggle client:load />
      <details class="md:hidden group" id="mobile-menu-details">
      <summary
        class="list-none rounded-lg p-2 text-gray-600 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-800 cursor-pointer [&::-webkit-details-marker]:hidden"
        aria-controls="mobile-menu"
      >
        <span class="sr-only">Открыть меню</span>
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </summary>
      <div
        id="mobile-menu"
        class="border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950 px-4 py-4"
        role="group"
        aria-label="Мобильное меню"
      >
        <nav class="flex flex-col gap-2" aria-label="Мобильное меню">
          <a href="/" class="rounded-lg px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 dark:focus-visible:ring-offset-gray-950">Главная</a>
          <a href="/cases" class="rounded-lg px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 dark:focus-visible:ring-offset-gray-950">Кейсы</a>
          <a href="/guides" class="rounded-lg px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 dark:focus-visible:ring-offset-gray-950">Инструкции</a>
          <a href="/about" class="rounded-lg px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 dark:focus-visible:ring-offset-gray-950">Обо мне</a>
          <a href="/contact" class="rounded-lg px-3 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 dark:focus-visible:ring-offset-gray-950">Контакты</a>
        </nav>
      </div>
    </details>
    </div>
  </div>
</header>

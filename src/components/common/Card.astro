---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;
const base =
  'block rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 shadow-sm transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg p-5 sm:p-6 hover:border-emerald-500/50 dark:hover:border-emerald-500/50';
const classes = [base, className].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}
